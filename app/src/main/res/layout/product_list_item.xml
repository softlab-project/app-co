<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- TODO (item-1) prettify the item! -->
    <!-- TODO (item-2) add an image view to show the flag of the country, with w and h of 40dp -->
    <!-- TODO (item-3) modify JSONUtils, ProductAdapter and ProductViewHolder to show the image -->


    <ImageView
        android:id="@+id/ic_country_flag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/ic_country_italy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="testo"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:padding="8dp"
                android:text="location"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="50"
                android:padding="8dp"
                android:text="price"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>